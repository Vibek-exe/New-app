<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

        <ImageButton
            android:id="@+id/cancelID"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|top"
            android:background="@drawable/cancel"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alert"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/rstreset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColorHint="#995E5E5E"
            android:textColor="@color/Text_color"
            android:singleLine="true"
            android:padding="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />


        <soup.neumorphism.NeumorphButton
            android:id="@+id/alrtSend"
            style="@style/Widget.Neumorph.Button"
            app:neumorph_shadowColorLight="@color/highlight"
            app:neumorph_shadowColorDark="@color/shadow_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/dialog_bg"
            android:text="Send"
            android:textColor="@color/black"
            app:backgroundTint="#6F36D6" />


    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:padding="2dp"
        android:src="@drawable/amail"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>