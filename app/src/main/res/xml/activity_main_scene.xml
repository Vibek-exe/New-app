<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:pathMotionArc="startVertical">
        <KeyFrameSet>
        </KeyFrameSet>
        <OnSwipe />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/tv_ls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@+id/tre_bg"
            android:layout_marginTop="100dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" />

        <Constraint
            android:layout_height="300dp"
            android:layout_width="match_parent"
            android:id="@+id/ll_bar"
            motion:layout_constraintTop_toTopOf="@+id/tv_ls"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/skip"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="58dp"
            android:layout_height="27dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="338dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/skip"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="58dp"
            android:layout_height="27dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="338dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/skip"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="58dp"
            android:layout_height="27dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="338dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/skip"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="58dp"
            android:layout_height="27dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="338dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/skip"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="58dp"
            android:layout_height="27dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="338dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:visibility="invisible" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="70dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/mn_logo"
            android:layout_marginStart="10dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_app"
            android:layout_marginStart="80dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="80dp"
            android:id="@+id/tre_bg" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/tre_bg"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:id="@+id/tv_welcome"
            android:layout_marginTop="10dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/tv_welcome"
            android:id="@+id/tv_ls"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" />

        <Constraint
            android:layout_height="350dp"
            android:layout_width="match_parent"
            android:id="@+id/ll_bar"
            android:layout_marginTop="50dp"
            motion:layout_constraintTop_toTopOf="@+id/tv_ls"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/skip"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="58dp"
            android:layout_height="27dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="338dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/skip"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="58dp"
            android:layout_height="27dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="338dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:visibility="visible" />


    </ConstraintSet>
</MotionScene>